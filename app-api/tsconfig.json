{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "types": ["node"],

    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "prisma", "prisma.config.ts"]
}